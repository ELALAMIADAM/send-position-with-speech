<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvLocationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: Not available"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvLocationDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocationStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnGetLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get My Location"
        android:textSize="16sp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocationDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Location via SMS"
        android:textSize="16sp"
        android:padding="12dp"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/btnGetLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Emergency Volume Button Section -->
    <TextView
        android:id="@+id/tvEmergencyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Volume Button Detection"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        app:layout_constraintTop_toBottomOf="@id/btnSendSMS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvEmergencyStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Detection: OFF"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnToggleEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Emergency Mode"
        android:textSize="16sp"
        android:padding="12dp"
        android:backgroundTint="@color/emergency_green"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvEmergencyInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="When enabled, quickly press Volume Down + Volume Up buttons 3 times to send emergency location"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/text_light"
        app:layout_constraintTop_toBottomOf="@id/btnToggleEmergency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvVolumeResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/text_dark"
        app:layout_constraintTop_toBottomOf="@id/tvEmergencyInstructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter phone number (e.g., +1234567890)"
        android:inputType="phone"
        android:textSize="16sp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvVolumeResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>